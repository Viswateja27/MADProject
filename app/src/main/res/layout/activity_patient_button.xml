<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".PatientButton">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PATIENTS"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/te1"
        android:textColor="#ffff"
        />


    <Button
        android:id="@+id/bb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Applicant"
        android:textSize="25sp"
        android:onClick="newapplicant"
        android:layout_below="@+id/te1"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        />

    <Button
        android:id="@+id/bb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discharging Applicant"
        android:textSize="25sp"
        android:onClick="discharge"
        android:layout_below="@+id/bb1"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        />
    <Button
        android:id="@+id/bb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Appointments"
        android:textSize="25sp"
        android:onClick="appointments"
        android:layout_below="@+id/bb2"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        />
    <Button
        android:id="@+id/bb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="25sp"
        android:onClick="Details"
        android:layout_below="@+id/bb3"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        />

    <Button
        android:id="@+id/bb5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Billing"
        android:textSize="25sp"
        android:onClick="Billing"
        android:layout_below="@+id/bb4"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        />

</RelativeLayout>